# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# AI Tools
CLAUDE_API_KEY=your_claude_api_key_here
ELASTIC_MCP_ENDPOINT=http://localhost:3000
WEB_SEARCH_API_KEY=your_web_search_api_key

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# Feature Toggle
ENABLE_WEB_SCRAPING=true
ENABLE_AI_GENERATION=true
ENABLE_SAMPLE_DATA_GENERATION=true

# Observability Configuration
OBSERVABILITY_ELASTICSEARCH_URL=https://your-elastic-deployment.elastic-cloud.com
OBSERVABILITY_ELASTICSEARCH_USERNAME=observability_user
OBSERVABILITY_ELASTICSEARCH_PASSWORD=your_password

# OpenTelemetry
OTEL_SERVICE_NAME=elastic-whats-new-generator
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=service.name=elastic-whats-new-generator,service.version=1.0.0

# Sampling
TRACE_SAMPLING_RATIO=1.0  # 100% in dev, 0.1 in prod
LOG_LEVEL=INFO

# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10